<html lang="en">
<head>
	<meta charset="utf-8">
	<title>Thing Description Directory</title>
  <link href="/assets/css/bootstrap.css" rel="stylesheet" type="text/css"/>
</head>
<body>
  <div class="container">
   <center> <h2>Thing Description Directory</h2> </center>
		<button class="btn btn-success" data-toggle="modal" data-target="#myModalAdd">Add New</button>
    <table class="table table-striped" id="mytable">
      <thead>
        <tr>
          <th>ID</th>
          <th>Building</th>
          <th>Room</th>
          <th>Thing</th>
          <th>URL</th>
          <th>Action</th>
        </tr>
      </thead>
      <tbody>
         {{#each things}}
        <tr>
          <td>{{ id }}</td>
          <td>{{ building }}</td>
          <td>{{ room }}</td>
          <td>{{ thing }}</td>
          <td><a href="{{ url }}" target="_new" >{{ url }}</a></td>
          <td>
            <a href="javascript:void(0);" class="btn btn-sm btn-info edit" data-id="{{ id }}" data-room="{{ room }}" data-thing="{{ thing }}">Edit</a>
            <a href="javascript:void(0);" class="btn btn-sm btn-danger delete" data-id="{{ id }}">Delete</a>
          </td>
        </tr>
        {{/each}}
      </tbody>
    </table>
  </div>

	<!-- Add New Thing Description-->
	  <form action="/save" method="post">
        <div class="modal fade" id="myModalAdd" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
         <div class="modal-dialog" role="document">
           <div class="modal-content">
             <div class="modal-header">
               <h5 class="modal-title" id="exampleModalLabel">Add Thing Description</h5>
               <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                 <span aria-hidden="true">&times;</span>
               </button>
             </div>
             <div class="modal-body">
               <div class="form-group">
                 <!--  <input type="text" name="room" class="form-control" placeholder="Room" required> -->
                 <textarea name="td" class="form-control" placeholder="Json format" rows="15" required></textarea>
             
               </div>

		 <!-- 
               <div class="form-group">
                   <input type="text" name="thing" class="form-control" placeholder="Thing" required>
               </div>
               -->
             </div>
             <div class="modal-footer">
               <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
               <button type="submit" class="btn btn-primary">Save</button>
             </div>
           </div>
         </div>
        </div>
	 </form>

	 <!-- Edit Product Modal-->
   <form action="/update" method="post">
       <div class="modal fade" id="EditModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
        <div class="modal-dialog" role="document">
          <div class="modal-content">
            <div class="modal-header">
              <h5 class="modal-title" id="exampleModalLabel">Edit Thing Description</h5>
              <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                <span aria-hidden="true">&times;</span>
              </button>
            </div>
            <div class="modal-body">
             
              <div class="form-group">
              	<textarea name="td" class="form-control td" placeholder="Json format" rows="15" required></textarea>
              </div>
              <!--
                  <input type="text" name="room" class="form-control room" placeholder="Room" required>
              </div>

              <div class="form-group">
                  <input type="text" name="thing" class="form-control Thing" placeholder="Thing" required>
              </div>
              -->
            </div>
            <div class="modal-footer">
              <input type="hidden" name="old" class="form-control old">
              <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
              <button type="submit" class="btn btn-primary">Update</button>
            </div>
          </div>
        </div>
       </div>
  </form>

	 <!-- Delete Product Modal-->
 	  <form id="add-row-form" action="/delete" method="post">
 	     <div class="modal fade" id="DeleteModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
 	        <div class="modal-dialog">
 	           <div class="modal-content">
 	               <div class="modal-header">
									 	<h5 class="modal-title" id="myModalLabel">Delete Thing Description</h5>
 	                  <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
 	               </div>
 	               <div class="modal-body">
												 <strong>Are You Sure To Delete This Data?</strong>
 	               </div>
 	               <div class="modal-footer">
									 		<input type="hidden" name="id" class="form-control id" required>
 	                   	<button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
 	                  	<button type="submit" class="btn btn-success">Delete</button>
 	               </div>
 	      			</div>
 	        </div>
 	     </div>
 	 </form>

<script src="/assets/js/jquery-3.3.1.js"></script>
<script src="/assets/js/bootstrap.js"></script>
<script>
    $(document).ready(function(){
			//showing data to modal for edit record
      $('#mytable').on('click','.edit',function(){
        var id = $(this).data('id');
        var td = $(this).data('td');
      	var old = $(this).data('id');
        $('#EditModal').modal('show');
        $('.old').val(id);
  
        $.get( "/td/"+id, function( dat ) {
  		$('.td').val(dat);
	});

      });
			//showing modal for delete record
			$('#mytable').on('click','.delete',function(){
        var id = $(this).data('id');
        $('#DeleteModal').modal('show');
        $('.id').val(id);
      });

    });
</script>
</body>
</html>
